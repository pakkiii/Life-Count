
<header class='top-page-header'>
  <div class="left-space-head">
    <%= link_to("/", class: "apri-title") do %>
      <%= image_tag 'main-icon.png' , size: '25x25', class: "down-times-icon" %>
      <h1>Life count</h1>
      <%= image_tag 'main-icon.png' , size: '25x25', class: "up-times-icon" %>
    <% end %> 
    <div class='nav'>
      <ul class='lists-right'>
        <% if user_signed_in? %>
        <li><%= link_to current_user.nick_name, "/users/#{current_user.id}", class: "user-nickname" %></li> 
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
        <% else %>
          <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
          <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>

        <% end %>
      </ul>
    </div>
  </div>
  <div class="right-space-head">
    <%= form_with(url: search_lives_path, local: true, method: :get, class: "life-search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "悩みを検索", class: "search-input" %>
      <%= form.submit "検索", class: "search-btn" %> 
    <% end %>
  </div>
</header>